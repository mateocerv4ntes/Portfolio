---

<style>

    /* header style*/
    .header {
        position: sticky;
        padding: 2rem 3rem;
        background-color: #1b1d35; 
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        z-index: 2000;
    }

    .header h1 a {
        font-weight: 600;
        color: #fafafa;
        margin: 0;
        text-decoration: none;
        font-size: 1.8rem;
        font-family: 'Work Sans', sans-serif;
    }

    .header nav a {
        font-family: 'Chivo Mono', monospace;
        color: #fafafa;
        font-size: 1.2rem
    }

    .header nav a:hover {
        font-weight: 600;
        text-decoration: underline;
    }

    nav {
        display: flex;
        gap: 1.5rem;
    }

    /* mobile hamburger style */
    .hamburger {
        display: none;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 5px;
        width: 30px;
        height: 24px;
        cursor: pointer;
        z-index: 2100;
    }

    .hamburger span {
        display: block;
        width: 25px;
        height: 3px;
        background: #fafafa;
        border-radius: 2px;
        transition: all 0.3s ease;
    }

    /* X animation */
    .hamburger.active span:nth-child(1) {
        transform: rotate(45deg) translate(5px, 5px);
    }

    .hamburger.active span:nth-child(2) {
        opacity: 0;
    }

    .hamburger.active span:nth-child(3) {
        transform: rotate(-45deg) translate(6px, -6px);
    }

    /* overlay menu style */
    .overlay {
        display: none;
        position: fixed;
        inset: 0;
        background: #fafafa;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 2rem;
        z-index: 1000;
    }

    .overlay a {
        font-family: 'Chivo Mono', monospace;
        color: #1b1d35; 
        font-size: 1.6rem;
        text-decoration: none;
    }

    .overlay a:hover {
        text-decoration: underline;
    }

    .overlay.active {
        display: flex;
    }

    /* responsive rules */
    @media (max-width: 768px) {
        nav {
        display: none;
        }
        .hamburger {
        display: flex;
        }
    }

    /* overlay logo */
    .overlay-logo {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .overlay-logo img {
        height: 64px;
        width: auto;
    }

</style>

<header class="header">
    <h1><a href="/">Mateo Cervantes</a></h1>

    <nav>
        <a href="/photo">Work</a>
        <a href="/contact">Contact</a>
        <a href="/about">About</a>
    </nav>

    <div class="hamburger" id="hamburger">
        <span></span>
        <span></span>
        <span></span>
    </div>
</header>

<div class="overlay" id="overlay">
    <div class="overlay-logo">
        <img src="../../public/logo_white.svg" alt="Logo" />
    </div>
    <a href="/photo">Work</a>
    <a href="/contact">Contact</a>
    <a href="/about">About</a>
</div>

<script>
const hamburger = document.getElementById("hamburger");
const overlay = document.getElementById("overlay");

if (hamburger && overlay) {
    hamburger.addEventListener("click", () => {
        hamburger.classList.toggle("active");
        overlay.classList.toggle("active");
    });
}
</script>